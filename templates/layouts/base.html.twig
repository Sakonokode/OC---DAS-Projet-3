<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('build/vendors~app.css') }}">
        {% endblock %}
    </head>
    <body>
        <div class="pusher">
            {% block header %}{% endblock %}
            {% block body %}
                {% block page %}

                {% endblock %}
            {% endblock %}
            {% block footer %}
                {% include 'includes/footer.html.twig' %}
            {% endblock %}

            {% block javascripts %}
                <script src="{{ asset('build/app.js') }}"></script>
                <script src="{{ asset('build/vendors~app.js') }}"></script>
                <script src="{{ asset('build/runtime.js') }}"></script>
            {% endblock %}
        </div>
    </body>
</html>
