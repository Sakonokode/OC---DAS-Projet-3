{% extends 'layouts/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('build/movies-styles.css') }}">
{% endblock %}

{% block page %}
    <div class="pusher">
        <div class="ui inverted vertical masthead center aligned segment">
            <div class="ui container">
                {% include 'includes/menu.html.twig' %}
            </div>
        </div>
        <div id="background">
            <div class="ui four column grid">
                <div class="row">
                    {% for movie in movies %}
                        <div class="column">
                            <div class="ui link cards">
                                <div class="card">
                                    <div class="image">
                                        <img alt="{{ movie.title }}"
                                             src="{{ asset('img/' ~ movie.title ~ '.jpg') }}">
                                    </div>
                                    <div class="content">
                                        <div class="header">{{ movie.title }}</div>
                                        <div class="meta">{{ movie.author }}</div>
                                        <div class="description">{{ movie.description }}</div>
                                        <div class="extra content">
                                            <span class="right floated">
                                                <a class="ui button primary" href="{{ path('play', {'slug': movie.slug}) }}">Plus</a>
                                            </span>
                                            <span class="left floated">
                                                <i class="clock outline icon"></i>
                                                {{ movie.duration }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/movies-styles.js') }}"></script>
{% endblock %}
