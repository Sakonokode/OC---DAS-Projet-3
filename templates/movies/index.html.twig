{% extends 'layouts/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('build/movies-styles.css') }}">
{% endblock %}

{% block page %}
    <div class="pusher">
        <div class="ui inverted vertical masthead center aligned segment">
            <div class="ui container">
                {% include 'includes/menu.html.twig' %}
            </div>
        </div>
        <div id="background">
            <div class="ui four column grid">
                <div class="row">
                    {% for movie in movies %}
                        <div class="column">
                            <div class="ui cards">
                                <div class="card">
                                    <div class="image">
                                        <img alt="{{ movie.title }}"
                                             src="{{ asset('img/' ~ movie.title ~ '.jpg') }}">
                                    </div>
                                    <div class="content">
                                        <div class="header">{{ movie.title }}</div>
                                        <div class="meta">{{ movie.author }}</div>
                                        <div class="description">{{ movie.content }}</div>
                                        <a class="ui button primary bottom attached button btn-more-detail"
                                           href="{{ path('app_read', {'slug': movie.slug}) }}">
                                            <i class="eye icon"></i>
                                            Plus d'infos
                                        </a>
                                        {% set seance = movie | next_seance %}
                                        {% set subscription = get_subscription(app.user, movie) %}
                                        {% if subscription is null %}
                                            {% set subscription = false %}
                                            <span class="react-subscription" data-seance="{{ seance.id }}"
                                                  data-is-subscribed="{{ subscription }}">Subscribe</span>
                                        {% elseif subscription.active == true %}
                                            <span class="react-subscription" data-seance="{{ seance.id }}"
                                                  data-is-subscribed="{{ subscription.active }}">Subscribe</span>
                                        {% elseif subscription.active == false %}
                                            {% set subscription = false %}
                                            <span class="react-subscription" data-seance="{{ seance.id }}"
                                                  data-is-subscribed="{{ subscription }}">Subscribe</span>
                                        {% endif %}
                                        {% if seance is not null %}
                                            {% set subscriptionPercent = 0 %}
                                            {% if seance.totalSubscriptions > 0 %}
                                                {% set subscriptionPercent = (seance.totalSubscriptions * 100) / seance.maxSubscriptions | round %}
                                            {% endif %}
                                            {{ dump(subscriptionPercent) }}
                                            <div class="ui yellow progress progress-bar"
                                                 data-percent="{{ subscriptionPercent }}">
                                                <div class="bar">
                                                </div>
                                            </div>
                                        {% endif %}
                                        <div class="extra content">
                                            <span class="left floated">
                                                <i class="clock outline icon"></i>
                                                {{ movie.duration }}
                                            </span>
                                            {% if seance is not null %}
                                                <span class="right floated">
                                                    {{ seance.totalSubscriptions ~ '/' ~ seance.maxSubscriptions ~ ' Places' }}
                                                </span>
                                                <span>
                                                    {{ seance.date | date('Y/m/d H:i') }}
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/movies-styles.js') }}"></script>
    <script src="{{ asset('build/movies.js') }}"></script>
    <script src="{{ asset('build/subscriptions.js') }}"></script>
    <script src="{{ asset('build/progress.js') }}"></script>
    <script src="{{ asset('build/vendors~progress~subscriptions.js') }}"></script>
{% endblock %}
