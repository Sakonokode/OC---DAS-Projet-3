{% extends 'layouts/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('build/movies-styles.css') }}">
{% endblock %}

{% block page %}
    <div class="pusher">
        <div class="ui inverted vertical masthead center aligned segment">
            <div class="ui container">
                {% include 'includes/menu.html.twig' %}
            </div>
        </div>
        <div id="background">
            <div class="ui four column grid">
                <div class="row">
                    {% for seance in seances %}
                        <div class="column">
                            <div class="ui link cards">
                                <div class="card">
                                    <div class="image">
                                        <img alt="{{ seance.media.title }}"
                                             src="{{ asset('img/' ~ seance.media.title ~ '.jpg') }}">
                                    </div>
                                    <div class="content">
                                        <div class="header">{{ seance.media.title }}</div>
                                        <div class="meta">{{ seance.media.author }}</div>
                                        <div class="description">{{ seance.media.description }}</div>
                                        <a class="ui button primary bottom attached button btn-more-detail" href="{{ path('play', {'slug': seance.media.slug}) }}">
                                            <i class="add icon"></i>
                                            Plus d'infos
                                        </a>
                                        {% set subscriptionPercent = 0 %}
                                        {% if seance.totalSubscriptions > 0 %}
                                            {% set subscriptionPercent = seance.maxSubscriptions / seance.totalSubscriptions * 100 | round %}
                                        {% endif %}
                                        <div class="ui progress progress-bar" data-percent="{{ subscriptionPercent }}">
                                            <div class="bar">
                                                <div class="progress"></div>
                                            </div>
                                        </div>
                                        <div class="extra content">
                                            <span class="left floated">
                                                <i class="clock outline icon"></i>
                                                {{ seance.media.duration }}
                                            </span>
                                            <span class="right floated">
                                                {{ seance.totalSubscriptions ~ '/' ~ seance.maxSubscriptions ~ ' Places' }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/movies-styles.js') }}"></script>
    <script src="{{ asset('build/movies.js') }}"></script>
    <script src="{{ asset('build/vendors~app~movies.js') }}"></script>
{% endblock %}
