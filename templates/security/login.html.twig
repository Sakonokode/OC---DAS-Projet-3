{% extends 'layouts/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page %}
    <form class="ui large form" action="{{ path('login') }}" method="post">
        {% if error %}
            <div class="ui red message">{{ error.message | replace ({
                    "Bad credentials": "Invalid password"
                }) }}
            </div>
        {% endif %}
        <h2 class="ui header">
            <i class="sign-in icon"></i>
        </h2>
        <div class="content">
            Log-in to your account
        </div>
        <fieldset>
            <legend><i class="fa fa-lock" aria-hidden="true"></i> {{ 'title.login' }}</legend>
            <div class="form-group">
                <label for="username">{{ 'label.username' }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="password">{{ 'label.password' }}</label>
                <input type="password" id="password" name="_password" class="form-control" />
            </div>
            <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'action.sign_in' }}
            </button>
        </fieldset>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}