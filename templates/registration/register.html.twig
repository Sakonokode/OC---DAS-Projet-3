<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('build/vendors~app.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('build/register-styles.css') }}">
    {% endblock %}
</head>
<body>
<div class="pusher">
    {% block header %}{% endblock %}
    {% block body %}
        {% block page %}
            <div class="ui middle aligned center aligned grid">
                <div class="column">
                    <h2 class="ui teal image header">
                        <div class="content">
                            Register your account
                        </div>
                    </h2>
                    <form class="ui large form" action="{{ path('user_registration') }}" method="post">
                        <div class="ui stacked segment">
                            {{ form_start(form) }}
                            <div class="field">
                                <div class="ui left icon input">
                                    <i class="user icon"></i>
                                    {{ form_widget(form.email, {'attr': {'placeholder': "E-mail ..."}}) }}
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui left icon input">
                                    <i class="lock icon"></i>
                                    {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': "Password ..."}}) }}
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui left icon input">
                                    <i class="lock icon"></i>
                                    {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': "Confirm your password ..."}}) }}
                                </div>
                            </div>
                            {% for error in errors %}
                                <div class="ui red message">{{ error.message | replace ({
                                        "This value is not valid": "La confirmation du mot de passe doit correspondre au mot de passe"
                                    }) }}
                                </div>
                            {% endfor %}
                            <br>
                            <button class="ui fluid large teal submit button">Register</button>
                            {{ form_end(form) }}
                            <div class="ui message">
                                Already registered ? <a href={{ path('login') }}>Sign In</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        {% endblock %}
    {% endblock %}
    {% block footer %}{% endblock %}
    {% block javascripts %}
        <script src="{{ asset('build/app.js') }}"></script>
        <script src="{{ asset('build/vendors~app.js') }}"></script>
        <script src="{{ asset('build/runtime.js') }}"></script>
    {% endblock %}
</div>
</body>
</html>