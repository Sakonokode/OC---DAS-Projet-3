{% extends 'layouts/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('build/register-styles.css') }}">
{% endblock %}

{% block page %}
<div class="ui middle aligned center aligned grid">
    <div class="column">
        <h2 class="ui teal image header">
            <div class="content">
                Register your account
            </div>
        </h2>
        <form class="ui large form" action="{{ path('user_registration') }}" method="post">
            {{ form_start(form) }}
            {{ form_widget(form.email, {'attr': {'placeholder': "E-mail ..."}}) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': "Password ..."}}) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': "Confirm your password ..."}}) }}
            <div class="ui error message"></div>
            <br>
            <button class="ui fluid large teal submit button">Register</button>
            {{ form_end(form) }}
            <div class="ui message">
                Already registered ? <a href={{ path('login') }}>Sign In</a>
            </div>
        </form>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}